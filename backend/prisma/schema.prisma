// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  orders    Order[]
  reviews   Review[]
  points    Int      @default(0)
  createdAt DateTime @default(now())
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  pizzas    Pizza[]
  createdAt DateTime @default(now())
}

model Pizza {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int      // em cêntimos (preço base)
  imageUrl    String
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  ingredients PizzaIngredient[]
  orderItems  OrderItem[]
  reviews     Review[]
}

model PizzaSize {
  id          String   @id @default(cuid())
  name        String   @unique // ex: Individual, Média, Familiar
  extraPrice  Int      @default(0) // em cêntimos
  orderItems  OrderItem[]
}

model CrustType {
  id          String   @id @default(cuid())
  name        String   @unique // ex: Fina, Clássica, Recheada
  extraPrice  Int      @default(0) // em cêntimos
  orderItems  OrderItem[]
}

model Banner {
  id        String   @id @default(cuid())
  title     String?
  imageUrl  String
  link      String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Ingredient {
  id          String @id @default(cuid())
  name        String @unique
  stock       Int    @default(0)
  extraPrice  Int    @default(0) // preço como extra (ex: +1.50€)
  pizzas      PizzaIngredient[]
  orderExtras OrderItemExtra[]
}

model PizzaIngredient {
  pizza        Pizza      @relation(fields: [pizzaId], references: [id])
  pizzaId      String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String

  @@id([pizzaId, ingredientId])
}

model Order {
  id          String       @id @default(cuid())
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
  status      String       @default("PENDING") // PENDING, PREPARING, BAKING, ON_THE_WAY, DELIVERED
  total       Int
  address     String
  phone       String
  delivery    Boolean
  couponCode  String?
  discount    Int          @default(0)
  items       OrderItem[]
  payment     Payment?
  createdAt   DateTime     @default(now())
}

model Payment {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String   @unique
  method    String   // MBWAY, CARD, CASH
  status    String   @default("PENDING") // PENDING, PAID, FAILED
  amount    Int
  createdAt DateTime @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  pizza     Pizza   @relation(fields: [pizzaId], references: [id])
  pizzaId   String
  size      PizzaSize? @relation(fields: [sizeId], references: [id])
  sizeId    String?
  crust     CrustType? @relation(fields: [crustId], references: [id])
  crustId   String?
  quantity  Int
  unitPrice Int
  extras    OrderItemExtra[]
}

model OrderItemExtra {
  id           String     @id @default(cuid())
  orderItem    OrderItem  @relation(fields: [orderItemId], references: [id])
  orderItemId  String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String
  quantity     Int        @default(1)
  priceAtOrder Int        // Preço cobrado na altura
}

model Review {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  pizza     Pizza    @relation(fields: [pizzaId], references: [id])
  pizzaId   String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
}

model Coupon {
  id            String   @id @default(cuid())
  code          String   @unique
  type          String   // PERCENT, FIXED
  value         Int
  minOrderValue Int      @default(0)
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
}
