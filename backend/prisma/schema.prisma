// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("CLIENTE") // CLIENTE, ADMIN
  orders    Order[]
  points    Int      @default(0)
  createdAt DateTime @default(now())
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  slug      String   @unique
  pizzas    Pizza[]
  createdAt DateTime @default(now())
}

model Pizza {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int      // em cêntimos (preço base)
  imageUrl    String
  featured    Boolean  @default(false)
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime @default(now())
  ingredients PizzaIngredient[]
  orderItems  OrderItem[]
}

model Banner {
  id        String   @id @default(cuid())
  title     String?
  imageUrl  String
  link      String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Ingredient {
  id      String @id @default(cuid())
  name    String @unique
  stock   Int    @default(0)
  pizzas  PizzaIngredient[]
}

model PizzaIngredient {
  pizza        Pizza      @relation(fields: [pizzaId], references: [id])
  pizzaId      String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String

  @@id([pizzaId, ingredientId])
}

model Order {
  id          String       @id @default(cuid())
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
  status      String       @default("PENDING") // PENDING, PREPARING, BAKING, ON_THE_WAY, DELIVERED
  total       Int
  address     String
  phone       String
  delivery    Boolean
  items       OrderItem[]
  payment     Payment?
  createdAt   DateTime     @default(now())
}

model Payment {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String   @unique
  method    String   // MBWAY, CARD, CASH
  status    String   @default("PENDING") // PENDING, PAID, FAILED
  amount    Int
  createdAt DateTime @default(now())
}

model OrderItem {
  id        String  @id @default(cuid())
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   String
  pizza     Pizza   @relation(fields: [pizzaId], references: [id])
  pizzaId   String
  quantity  Int
  unitPrice Int
}

model Coupon {
  id            String   @id @default(cuid())
  code          String   @unique
  type          String   // PERCENT, FIXED
  value         Int
  minOrderValue Int      @default(0)
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
}
