// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  orders    Order[]
  reviews   Review[]
  points    Int      @default(0)
  createdAt DateTime @default(now())
}

model Pizza {
  id          String   @id @default(cuid())
  name        String
  description String
  basePrice   Int      // em cêntimos (preço base para o tamanho padrão)
  imageUrl    String
  createdAt   DateTime @default(now())
  ingredients PizzaIngredient[]
  sizes       PizzaSize[]
  orderItems  OrderItem[]
  reviews     Review[]
}

model PizzaSize {
  id      String @id @default(cuid())
  name    String // Pequena, Média, Família
  price   Int    // Preço total para este tamanho
  pizza   Pizza  @relation(fields: [pizzaId], references: [id])
  pizzaId String
}

model Extra {
  id         String @id @default(cuid())
  name       String @unique
  price      Int    // em cêntimos
  orderItems OrderItemExtra[]
}

model Ingredient {
  id      String @id @default(cuid())
  name    String @unique
  pizzas  PizzaIngredient[]
}

model PizzaIngredient {
  pizza        Pizza      @relation(fields: [pizzaId], references: [id])
  pizzaId      String
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])
  ingredientId String

  @@id([pizzaId, ingredientId])
}

model Order {
  id          String       @id @default(cuid())
  user        User?        @relation(fields: [userId], references: [id])
  userId      String?
  status      String       @default("PENDING") // PENDING, PREPARING, BAKING, ON_THE_WAY, DELIVERED
  coupon      Coupon?      @relation(fields: [couponId], references: [id])
  couponId    String?
  usedPoints  Int          @default(0)
  total       Int
  address     String
  phone       String
  delivery    Boolean
  items       OrderItem[]
  payment     Payment?
  createdAt   DateTime     @default(now())
}

model Payment {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String   @unique
  method    String   // MBWAY, CARD, CASH
  status    String   @default("PENDING") // PENDING, PAID, FAILED
  amount    Int
  createdAt DateTime @default(now())
}

model OrderItem {
  id        String           @id @default(cuid())
  order     Order            @relation(fields: [orderId], references: [id])
  orderId   String
  pizza     Pizza            @relation(fields: [pizzaId], references: [id])
  pizzaId   String
  sizeName  String?          // Nome do tamanho escolhido
  quantity  Int
  unitPrice Int
  extras    OrderItemExtra[]
}

model OrderItemExtra {
  id          String    @id @default(cuid())
  orderItem   OrderItem @relation(fields: [orderItemId], references: [id])
  orderItemId String
  extra       Extra     @relation(fields: [extraId], references: [id])
  extraId     String
  unitPrice   Int
}

model Coupon {
  id           String    @id @default(cuid())
  code         String    @unique
  discountType String    // PERCENT, FIXED
  value        Int       // valor ou percentagem
  minOrder     Int?      // valor mínimo de encomenda
  validFrom    DateTime  @default(now())
  validUntil   DateTime?
  active       Boolean   @default(true)
  orders       Order[]
}

model Review {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  pizza     Pizza?   @relation(fields: [pizzaId], references: [id])
  pizzaId   String?
  rating    Int      // 1-5
  comment   String?
  createdAt DateTime @default(now())
}
